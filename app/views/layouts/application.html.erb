<!DOCTYPE html>
<html>
<head>
  <title>ScrivitoExample</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <%= scrivito_header_tags %>

  <% if inplace_editing_allowed? %>
    <%= javascript_include_tag 'editing' %>
    <%= stylesheet_link_tag 'editing' %>
  <% end %>
</head>
<body>
  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to sanitize(homepage.menu_title), cms_path(homepage),
          class: "navbar-brand" %>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <%= cms_tag_list :ul, homepage, :toclist, class: "nav navbar-nav" do |list, obj| %>

          <% list.tag :li  do %>
            <%= link_to sanitize(obj.menu_title), cms_path(obj) %>
          <% end %>
        <% end %>

        <%= form_tag cms_path(homepage.search_result_page), method: :get,
          class: 'navbar-form navbar-right', role: 'search' do %>
          <div class="form-group">
            <%= text_field_tag :q, params[:q], class: 'form-control',
              placeholder: 'Search ...' %>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        <% end %>
      </div>
    </div>
  </nav>

  <div class="container-fluid">
    <%= yield %>
  </div>

  <%= scrivito_after_content_tags %>
</body>
</html>
